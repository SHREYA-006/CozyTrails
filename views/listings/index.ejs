<%layout("/layouts/boilerPlate")-%>
<div class="d-none d-md-block" id="filters">
  <div class="d-flex flex-nowrap overflow-auto gap-3 py-3">
    <% const categories = [
        { name: 'Trending', icon: 'fa-fire' },
        { name: 'Rooms', icon: 'fa-bed' },
        { name: 'Amazing_cities', icon: 'fa-mountain-city' },
        { name: 'Arctic', icon: 'fa-snowman' },
        { name: 'Castle', icon: 'fa-fort-awesome' },
        { name: 'Camping', icon: 'fa-campground' },
        { name: 'Domes', icon: 'fa-landmark-dome' },
        { name: 'Top_of_the_world', icon: 'fa-mountain' },
        { name: 'Beaches', icon: 'fa-umbrella-beach' },
        { name: 'Amazing_pools', icon: 'fa-person-swimming' },
        { name: 'Breakfast', icon: 'fa-mug-saucer' },
    ]; %>

    <% categories.forEach(category => { %>
      <a href="/listings?category=<%= category.name %>">
        <div class="filter text-center <%= selectedCategory === category.name ? 'active-filter' : '' %>">
          <div><i style="font-size: 0.8rem;" class="fa-solid  <%= category.icon %> fa-lg "></i></div>
          <p style="font-size: 0.8rem;"class="small mb-0"><%= category.name.replace(/_/g, " ") %></p>
        </div>
      </a>
    <% }); %>

    <!-- Toggle Option -->
    <div class="d-flex align-items-center ms-4">
      <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="switchCheckDefault">
        <label class="form-check-label ms-2" for="switchCheckDefault">Display total after taxes</label>
      </div>
    </div>
  </div>
</div>

<!-- Filters Button (Small Screens Only) -->
<div class="d-md-none text-center my-2">
  <button class="btn btn-outline-dark" data-bs-toggle="modal" data-bs-target="#filtersModal">
    <i class="fa-solid fa-sliders"></i> Filters
  </button>
</div>

<!-- Filters Modal (for Small Screens Only) -->
<div class="modal fade" id="filtersModal" tabindex="-1" aria-labelledby="filtersModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-scrollable custom-modal">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="filtersModalLabel">Select Filters</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>

      <div class="modal-body">
        <div class="row row-cols-2 row-cols-md-3 g-3 text-center">
          <% categories.forEach(category => { %>
            <div class="col">
              <a href="/listings?category=<%= category.name %>">
                <div class="filter <%= selectedCategory === category.name ? 'active-filter' : '' %>">
                  <div><i class="fa-solid <%= category.icon %>"></i></div>
                  <p><%= category.name.replace(/_/g, " ") %></p>
                </div>
              </a>
            </div>
          <% }); %>

          <!-- Toggle Option -->
          <div class="col-12 mt-4">
            <div class="form-check form-switch d-flex justify-content-center">
              <input class="form-check-input" type="checkbox" id="switchCheckDefaultModal">
              <label class="form-check-label ms-2" for="switchCheckDefaultModal">Display total after taxes</label>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-1">
        <%for (let list of allListing){%>
        <a href="/listings/<%=list._id%>" class="listing-link">
        <div class="card">
            <img src="<%=list.image.url%>" class="card-img-top" alt="..." style="height: 20rem;">
            <div class="card-body">
                </b><p class="card-text"><b><%=list.title%></b><br>
                    Price:&#8377; <%=list.price.toLocaleString("en-IN")%>/night
                    <i class="tax-info"> &nbsp;&nbsp; + 18% GST </i>
                </p>
            </div>
        </div>
        </a>
        <%}%>
    </div>


<script>
    document.addEventListener("DOMContentLoaded", function () {
        let taxSwitch = document.getElementById("switchCheckDefault");
        taxSwitch.addEventListener("click", () => {
            let taxInfo=document.getElementsByClassName("tax-info")
            for(info of taxInfo){
                if(info.style.display!="inline"){
                    info.style.display="inline"
                }
                else{
                    info.style.display="none"
                }
            }
        });
    });
</script>