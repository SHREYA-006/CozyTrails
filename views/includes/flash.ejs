<%if(success && success.length){%>
    <div class="alert 
                alert-success
                alert-dismisible 
                fade show 
                col-6 
                offset-3 
                d-flex justify-content-between 
                align-items-center
                custom-alert" 
                role="alert"><%=success%>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<%if(failure && failure.length){%>
    <div class="alert 
                alert-danger 
                alert-dismisible 
                fade show 
                col-6 
                offset-3
                d-flex justify-content-between 
                align-items-center" role="alert"><%=failure%>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<%}%>

<% if (error && error.length > 0) { %>
    <div class="alert 
                alert-danger 
                alert-dismisible 
                fade show 
                col-6 
                offset-3
                d-flex justify-content-between 
                align-items-center" role="alert"><%= error %>
        <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
